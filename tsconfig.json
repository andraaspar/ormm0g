{
	"compilerOptions": {
		"target": "es5",
		"module": "es6",
		"moduleResolution": "node",
		"lib": [
			"es5",
			"es2015.promise",
			"dom"
		],
		"baseUrl": "./src/ts",
		"jsx": "preserve",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"allowSyntheticDefaultImports": true
	},
	"exclude": [
		"node_modules"
	]
}